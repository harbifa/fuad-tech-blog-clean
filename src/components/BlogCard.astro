---
export interface Props {
  title: string;
  excerpt: string;
  category: string;
  date: string;
  readTime: string;
  image?: string;
  slug: string;
  tags?: string[];
  featured?: boolean;
  affiliate?: {
    enabled: boolean;
    products?: Array<{
      name: string;
      link: string;
      price?: string;
      rating?: number;
    }>;
  };
}

const { title, excerpt, category, date, readTime, image, slug, tags = [], featured = false, affiliate } = Astro.props;

// Category icons and colors
const categoryConfig = {
  'surveillance-cameras': { icon: 'fa-video', color: 'text-blue-600', bg: 'bg-blue-50' },
  'security-systems': { icon: 'fa-shield-alt', color: 'text-red-600', bg: 'bg-red-50' },
  'reviews': { icon: 'fa-star', color: 'text-green-600', bg: 'bg-green-50' }
};

const config = categoryConfig[category] || { icon: 'fa-file-alt', color: 'text-gray-600', bg: 'bg-gray-50' };

// Category names in Arabic
const categoryNames = {
  'surveillance-cameras': 'كاميرات المراقبة',
  'security-systems': 'الأنظمة الأمنية', 
  'reviews': 'المراجعات'
};
---

<article class="bg-white dark:bg-gray-800 rounded-card shadow-card hover:shadow-card-hover transition-all duration-300 overflow-hidden group relative">
  <!-- Featured Badge -->
  {featured && (
    <div class="absolute top-4 left-4 z-10">
      <span class="inline-flex items-center px-2 py-1 bg-gradient-to-r from-yellow-400 to-orange-500 text-white text-xs font-bold rounded-full">
        <i class="fas fa-crown mr-1"></i>
        مميز
      </span>
    </div>
  )}
  
  <!-- Affiliate Badge -->
  {affiliate?.enabled && (
    <div class="absolute top-4 right-4 z-10">
      <span class="inline-flex items-center px-2 py-1 bg-gradient-to-r from-green-500 to-emerald-600 text-white text-xs font-bold rounded-full">
        <i class="fas fa-shopping-cart mr-1"></i>
        توصيات شراء
      </span>
    </div>
  )}
  
  <!-- Image -->
  {image && (
    <div class="relative overflow-hidden">
      <img 
        src={image} 
        alt={title}
        class="w-full h-48 object-cover object-center group-hover:scale-105 transition-transform duration-300"
        style="object-position: center center;"
        loading="lazy"
      />
      <div class="absolute bottom-4 right-4">
        <span class={`inline-flex items-center px-3 py-1 rounded-full text-sm font-medium ${config.bg} ${config.color} backdrop-blur-sm bg-opacity-90`}>
          <i class={`fas ${config.icon} mr-1`}></i>
          {categoryNames[category] || 'عام'}
        </span>
      </div>
      
      <!-- Affiliate Products Preview -->
      {affiliate?.enabled && affiliate.products && affiliate.products.length > 0 && (
        <div class="absolute bottom-4 left-4">
          <div class="bg-black bg-opacity-75 text-white px-2 py-1 rounded text-xs">
            {affiliate.products.length} منتج مراجع
          </div>
        </div>
      )}
    </div>
  )}
  
  <!-- Content -->
  <div class="p-6">
    <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-3 group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors line-clamp-2">
      <a href={`/posts/${slug}`}>{title}</a>
    </h3>
    
    <p class="text-gray-600 dark:text-gray-300 leading-relaxed mb-4 line-clamp-3">
      {excerpt}
    </p>
    
    <!-- Affiliate Products Quick Preview -->
    {affiliate?.enabled && affiliate.products && affiliate.products.length > 0 && (
      <div class="mb-4 p-3 bg-gradient-to-r from-green-50 to-emerald-50 dark:from-green-900 dark:to-emerald-900 rounded-lg border border-green-200 dark:border-green-700">
        <div class="flex items-center justify-between">
          <div class="flex items-center">
            <i class="fas fa-star text-yellow-500 mr-2"></i>
            <span class="text-sm font-semibold text-green-700 dark:text-green-300">
              يتضمن توصيات شراء
            </span>
          </div>
          <div class="text-xs text-green-600 dark:text-green-400">
            {affiliate.products.length} منتج
          </div>
        </div>
        {affiliate.products[0] && (
          <div class="mt-2 text-xs text-gray-600 dark:text-gray-400">
            أفضل اختيار: {affiliate.products[0].name}
            {affiliate.products[0].rating && (
              <span class="mr-2">
                {'★'.repeat(Math.floor(affiliate.products[0].rating))} {affiliate.products[0].rating}/5
              </span>
            )}
          </div>
        )}
      </div>
    )}
    
    <!-- Tags -->
    {tags && tags.length > 0 && (
      <div class="flex flex-wrap gap-2 mb-4">
        {tags.slice(0, 3).map(tag => (
          <span class="inline-block px-2 py-1 bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 text-xs rounded-md">
            #{tag}
          </span>
        ))}
      </div>
    )}
    
    <!-- Meta Info -->
    <div class="flex items-center justify-between text-sm text-gray-500 dark:text-gray-400">
      <div class="flex items-center space-x-4 rtl:space-x-reverse">
        <span class="flex items-center">
          <i class="fas fa-calendar-alt mr-1"></i>
          {date}
        </span>
        <span class="flex items-center">
          <i class="fas fa-clock mr-1"></i>
          {readTime}
        </span>
      </div>
      
      <a 
        href={`/posts/${slug}`}
        class="inline-flex items-center text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300 font-medium transition-colors group"
      >
        {affiliate?.enabled ? 'تصفح المراجعات' : 'اقرأ المزيد'}
        <i class="fas fa-arrow-left mr-2 group-hover:translate-x-1 transition-transform"></i>
      </a>
    </div>
  </div>
</article>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>