---
export interface Props {
  id: string;
  title: string;
  gradient?: string;
  size?: 'large' | 'medium' | 'small';
}

const { id, title, gradient = 'from-blue-600 via-indigo-600 to-purple-600', size = 'large' } = Astro.props;

const sizeClasses = {
  large: 'text-4xl md:text-6xl min-h-24',
  medium: 'text-3xl md:text-5xl min-h-20',
  small: 'text-2xl md:text-4xl min-h-16'
};

const gradientClasses: Record<string, string> = {
  'from-blue-600 via-indigo-600 to-purple-600': 'from-blue-500 via-indigo-500 to-purple-500',
  'from-green-600 via-emerald-600 to-teal-600': 'from-green-500 via-emerald-500 to-teal-500',
  'from-orange-600 via-red-600 to-pink-600': 'from-orange-500 via-red-500 to-pink-500',
  'from-purple-600 via-pink-600 to-red-600': 'from-purple-500 via-pink-500 to-red-500',
  'from-teal-600 via-cyan-600 to-blue-600': 'from-teal-500 via-cyan-500 to-blue-500',
  'from-emerald-600 via-teal-600 to-cyan-600': 'from-emerald-500 via-teal-500 to-cyan-500',
  'from-slate-600 via-gray-600 to-zinc-600': 'from-slate-500 via-gray-500 to-zinc-500'
};

const underlineGradient = gradientClasses[gradient] || gradientClasses['from-blue-600 via-indigo-600 to-purple-600'];
---

<div class="text-center mb-12">
  <div class="inline-block relative">
    <h2 
      id={id} 
      class={`font-black text-transparent bg-clip-text bg-gradient-to-r ${gradient} mb-6 ${sizeClasses[size]}`}
    >
      {title}
    </h2>
    <div class={`absolute -bottom-3 left-0 right-0 h-2 bg-gradient-to-r ${underlineGradient} rounded-full`}></div>
  </div>
</div> 