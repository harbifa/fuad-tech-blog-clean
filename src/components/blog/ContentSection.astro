---
import SectionTitle from './SectionTitle.astro';

export interface Props {
  id: string;
  title: string;
  gradient?: string;
  bgGradient?: string;
  children: any;
}

const { id, title, gradient = 'from-blue-600 via-indigo-600 to-purple-600', bgGradient = 'from-blue-50 via-white to-indigo-50 dark:from-blue-900/20 dark:via-gray-800 dark:to-indigo-900/20' } = Astro.props;
---

<section class={`bg-gradient-to-br ${bgGradient} py-16 px-6 relative overflow-hidden`}>
  
  {/* خلفية ديكورية */}
  <div class="absolute inset-0 opacity-10 dark:opacity-5">
    <div class="absolute top-10 right-10 w-56 h-56 bg-gradient-to-br from-blue-400 to-indigo-500 rounded-full blur-3xl"></div>
    <div class="absolute bottom-10 left-10 w-40 h-40 bg-gradient-to-br from-indigo-400 to-purple-500 rounded-full blur-3xl"></div>
  </div>
  
  <div class="max-w-6xl mx-auto relative z-10">
    
    {/* عنوان القسم */}
    <SectionTitle id={id} title={title} gradient={gradient} />
    
    {/* محتوى القسم */}
    <div class="bg-white dark:bg-gray-800 rounded-3xl p-8 shadow-2xl border border-gray-100 dark:border-gray-700">
      <slot />
    </div>
    
  </div>
</section> 