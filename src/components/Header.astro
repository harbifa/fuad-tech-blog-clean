---

<header class="sticky top-0 z-50 bg-white/90 dark:bg-gray-900/90 backdrop-blur-md border-b border-gray-200 dark:border-gray-700">
  <nav class="container mx-auto px-4 py-4">
    <div class="flex items-center justify-between">
      <!-- Logo -->
      <a href="/" class="flex items-center space-x-3 rtl:space-x-reverse">
        <div class="w-10 h-10 bg-gradient-to-br from-primary-600 to-secondary-600 rounded-lg flex items-center justify-center">
          <i class="fas fa-feather-alt text-white text-xl"></i>
        </div>
        <span class="text-2xl font-bold bg-gradient-to-r from-primary-600 to-secondary-600 bg-clip-text text-transparent">
          مدونة عزيز
        </span>
      </a>
      
      <!-- Navigation Menu -->
      <div class="hidden md:flex items-center space-x-8 rtl:space-x-reverse">
        <a href="/" class="text-gray-700 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400 transition-colors">
          الرئيسية
        </a>
        <a href="/categories/surveillance-cameras" class="text-gray-700 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400 transition-colors">
          كاميرات المراقبة
        </a>
        <a href="/categories/security-systems" class="text-gray-700 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400 transition-colors">
          الأنظمة الأمنية
        </a>
        <a href="/categories/reviews" class="text-gray-700 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400 transition-colors">
          المراجعات
        </a>
        <a href="/about" class="text-gray-700 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400 transition-colors">
          من أنا
        </a>
        <a href="/contact" class="text-gray-700 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400 transition-colors">
          اتصل بنا
        </a>
      </div>
      
      <!-- Search & Theme Toggle & Mobile Menu -->
      <div class="flex items-center space-x-4 rtl:space-x-reverse">
        <!-- Search Button -->
        <button
          onclick="openSearch()"
          class="hidden md:flex items-center px-4 py-2 bg-gray-100 dark:bg-gray-800 hover:bg-gray-200 dark:hover:bg-gray-700 rounded-lg transition-colors text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-100"
          aria-label="البحث"
        >
          <i class="fas fa-search ml-2"></i>
          <span class="text-sm">بحث</span>
          <div class="hidden lg:flex items-center mr-3 space-x-1">
            <kbd class="px-1.5 py-0.5 bg-white dark:bg-gray-600 border border-gray-300 dark:border-gray-500 rounded text-xs">Ctrl</kbd>
            <span class="text-xs">+</span>
            <kbd class="px-1.5 py-0.5 bg-white dark:bg-gray-600 border border-gray-300 dark:border-gray-500 rounded text-xs">/</kbd>
          </div>
        </button>
        
        <!-- Mobile Search Button -->
        <button
          onclick="openSearch()"
          class="md:hidden p-2 rounded-lg bg-gray-100 dark:bg-gray-800 hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors"
          aria-label="البحث"
        >
          <i class="fas fa-search text-gray-600 dark:text-gray-400"></i>
        </button>
        
        <!-- Theme Toggle -->
        <button
          onclick="toggleTheme()"
          class="p-2 rounded-lg bg-gray-100 dark:bg-gray-800 hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors"
          aria-label="تبديل الوضع"
        >
          <i class="fas fa-sun text-yellow-500 dark:hidden"></i>
          <i class="fas fa-moon text-blue-400 hidden dark:block"></i>
        </button>
        
        <!-- Mobile Menu Button -->
        <button
          id="mobile-menu-button"
          class="md:hidden p-2 rounded-lg bg-gray-100 dark:bg-gray-800 hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors"
          aria-label="القائمة"
        >
          <i class="fas fa-bars"></i>
        </button>
      </div>
    </div>
    
    <!-- Mobile Menu -->
    <div id="mobile-menu" class="hidden md:hidden mt-4 pb-4 border-t border-gray-200 dark:border-gray-700 pt-4">
      <div class="flex flex-col space-y-3">
        <a href="/" class="text-gray-700 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400 transition-colors">
          الرئيسية
        </a>
        <a href="/categories/surveillance-cameras" class="text-gray-700 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400 transition-colors">
          كاميرات المراقبة
        </a>
        <a href="/categories/security-systems" class="text-gray-700 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400 transition-colors">
          الأنظمة الأمنية
        </a>
        <a href="/categories/reviews" class="text-gray-700 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400 transition-colors">
          المراجعات
        </a>
        <a href="/about" class="text-gray-700 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400 transition-colors">
          من أنا
        </a>
        <a href="/contact" class="text-gray-700 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400 transition-colors">
          اتصل بنا
        </a>
      </div>
    </div>
  </nav>
</header>

<script>
  // Mobile menu toggle
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  
  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>