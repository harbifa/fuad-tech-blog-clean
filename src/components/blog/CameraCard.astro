  subtitle: string;
  description: string;
  image: string;
  imageAlt: string;
  badge?: {
    text: string;
    gradient: string;
  };
  rating?: {
    stars: number;
    score: number;
  };
  features: {
    icon: string;
    title: string;
    description: string;
    color: string;
  }[];
