---
// مكون SEO محسن لـ Search Console
export interface Props {
  title: string;
  description: string;
  keywords?: string[];
  category?: string;
  publishedTime?: string;
  modifiedTime?: string;
  image?: string;
  author?: string;
  readTime?: string;
  wordCount?: number;
}

const {
  title,
  description,
  keywords = [],
  category,
  publishedTime,
  modifiedTime,
  image,
  author = 'عزيز',
  readTime,
  wordCount
} = Astro.props;

// Generate enhanced keywords based on content
const enhancedKeywords = [
  ...keywords,
  'كاميرات المراقبة',
  'أنظمة أمنية',
  'مراجعات تقنية',
  'أمان منزلي',
  'مدونة عزيز'
].filter(Boolean);

// Category-specific keywords
const categoryKeywords = {
  'surveillance-cameras': ['كاميرات IP', 'كاميرات لاسلكية', 'مراقبة منزلية', 'كاميرات خارجية'],
  'security-systems': ['أنظمة إنذار', 'أنظمة حماية', 'أمان ذكي', 'تقنيات أمنية'],
  'reviews': ['مراجعات منتجات', 'تقييمات', 'توصيات شراء', 'مقارنات']
};

if (category && categoryKeywords[category]) {
  enhancedKeywords.push(...categoryKeywords[category]);
}

// Generate FAQ schema for better search results
const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "ما هي أفضل كاميرات المراقبة؟",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "أفضل كاميرات المراقبة تعتمد على احتياجاتك. للمنازل ننصح بكاميرات IP اللاسلكية، وللشركات كاميرات سلكية عالية الدقة."
      }
    },
    {
      "@type": "Question", 
      "name": "كيف أختار نظام أمني مناسب؟",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "اختيار النظام الأمني يعتمد على حجم المكان، الميزانية، ونوع الحماية المطلوبة. ننصح بالبدء بتقييم احتياجاتك الأمنية."
      }
    }
  ]
};
---

<!-- Enhanced SEO Meta Tags -->
<meta name="keywords" content={enhancedKeywords.join(', ')} />
<meta name="author" content={author} />

{readTime && <meta name="reading-time" content={readTime} />}
{wordCount && <meta name="word-count" content={wordCount.toString()} />}

<!-- Article-specific meta tags -->
{publishedTime && (
  <>
    <meta name="article:published_time" content={publishedTime} />
    <meta property="article:published_time" content={publishedTime} />
  </>
)}

{modifiedTime && (
  <>
    <meta name="article:modified_time" content={modifiedTime} />
    <meta property="article:modified_time" content={modifiedTime} />
  </>
)}

{category && (
  <>
    <meta name="article:section" content={category} />
    <meta property="article:section" content={category} />
  </>
)}

<!-- Enhanced Open Graph -->
<meta property="og:type" content={publishedTime ? 'article' : 'website'} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:url" content={Astro.url.toString()} />
<meta property="og:site_name" content="مدونة عزيز" />
<meta property="og:locale" content="ar_SA" />

{image && (
  <>
    <meta property="og:image" content={image} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content={title} />
  </>
)}

<!-- Twitter Card Enhanced -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:site" content="@aziz_tech_blog" />
<meta name="twitter:creator" content="@aziz_tech" />

{image && (
  <meta name="twitter:image" content={image} />
)}

<!-- Breadcrumb Schema -->
<script type="application/ld+json">
{
  "@context": "https://schema.org",
