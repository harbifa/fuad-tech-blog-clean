---
export interface Props {
  type: 'problem' | 'solution' | 'goal';
  icon: string;
  title: string;
  gradient: string;
  borderColor: string;
  children: any;
}

const { type, icon, title, gradient, borderColor, children } = Astro.props;
---

<div class={`bg-gradient-to-r ${gradient} rounded-xl p-6 mb-8 border-r-4 ${borderColor} shadow-md`}>
  <div class="flex items-start">
    <span class="text-3xl ml-4 flex-shrink-0">{icon}</span>
    <div>
      <div class="font-bold text-xl text-gray-900 dark:text-gray-100 mb-3">{title}</div>
      <slot />
    </div>
  </div>
</div> 