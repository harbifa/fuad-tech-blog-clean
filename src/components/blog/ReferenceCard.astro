---
export interface Props {
  number: number;
  title: string;
  source: string;
  url: string;
  color: 'blue' | 'green' | 'purple' | 'orange' | 'teal' | 'indigo' | 'yellow' | 'red' | 'emerald';
}

const { number, title, source, url, color } = Astro.props;

const colorClasses = {
  blue: 'from-blue-50 to-indigo-50 dark:from-blue-900/20 dark:to-indigo-900/20 border-blue-200 dark:border-blue-700',
  green: 'from-green-50 to-emerald-50 dark:from-green-900/20 dark:to-emerald-900/20 border-green-200 dark:border-green-700',
  purple: 'from-purple-50 to-pink-50 dark:from-purple-900/20 dark:to-pink-900/20 border-purple-200 dark:border-purple-700',
  orange: 'from-orange-50 to-red-50 dark:from-orange-900/20 dark:to-red-900/20 border-orange-200 dark:border-orange-700',
  teal: 'from-teal-50 to-cyan-50 dark:from-teal-900/20 dark:to-cyan-900/20 border-teal-200 dark:border-teal-700',
  indigo: 'from-indigo-50 to-blue-50 dark:from-indigo-900/20 dark:to-blue-900/20 border-indigo-200 dark:border-indigo-700',
  yellow: 'from-yellow-50 to-amber-50 dark:from-yellow-900/20 dark:to-amber-900/20 border-yellow-200 dark:border-yellow-700',
  red: 'from-red-50 to-pink-50 dark:from-red-900/20 dark:to-pink-900/20 border-red-200 dark:border-red-700',
  emerald: 'from-emerald-50 to-green-50 dark:from-emerald-900/20 dark:to-green-900/20 border-emerald-200 dark:border-emerald-700'
};

const bgColors = {
  blue: 'from-blue-500 to-indigo-600',
  green: 'from-green-500 to-emerald-600',
  purple: 'from-purple-500 to-pink-600',
  orange: 'from-orange-500 to-red-600',
  teal: 'from-teal-500 to-cyan-600',
  indigo: 'from-indigo-500 to-blue-600',
  yellow: 'from-yellow-500 to-amber-600',
  red: 'from-red-500 to-pink-600',
  emerald: 'from-emerald-500 to-green-600'
};

const textColors = {
  blue: 'text-blue-600 dark:text-blue-400',
  green: 'text-green-600 dark:text-green-400',
  purple: 'text-purple-600 dark:text-purple-400',
  orange: 'text-orange-600 dark:text-orange-400',
  teal: 'text-teal-600 dark:text-teal-400',
  indigo: 'text-indigo-600 dark:text-indigo-400',
  yellow: 'text-yellow-600 dark:text-yellow-400',
  red: 'text-red-600 dark:text-red-400',
  emerald: 'text-emerald-600 dark:text-emerald-400'
};
---

<div class={`bg-gradient-to-r ${colorClasses[color]} rounded-2xl p-6 border`}>
  <div class="flex items-start">
    <div class={`w-12 h-12 bg-gradient-to-br ${bgColors[color]} rounded-xl flex items-center justify-center text-white font-bold text-xl ml-4 flex-shrink-0`}>
      {number}
    </div>
    <div class="flex-1">
      <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-2">
        {title}
      </h3>
      <p class="text-gray-600 dark:text-gray-400 mb-3">{source}</p>
      <a href={url} target="_blank" rel="noopener noreferrer" class={`${textColors[color]} hover:underline font-semibold`}>
        عرض المصدر →
      </a>
    </div>
  </div>
</div> 